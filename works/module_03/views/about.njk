{% extends "layout.njk" %}

{% block content %}

    <div id="wrapper">
        <img src="{{about.avatar_url}}" alt="Bruno Belarmino">
        <h1>{{about.name }}</h1>
        <h2>{{about.role }}</h2>
        <p>{{about.description }}</p>
    </div>

    <div class="links" id="footer">

    {% for link in about.links %}
        <a href="{{link.url }}">{{link.name }}</a>
    {% endfor %}

    </div>

{% endblock %}