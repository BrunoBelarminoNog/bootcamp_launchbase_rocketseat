<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Foodfy</title>

    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/cards.css">
    <link rel="stylesheet" href="/styles/modal.css">
</head>

<body>
    <header>
        <div class="container_header">
            <div id="logo_header">
                <a href="/">
                    <h1>Foody</h1>
                </a>
            </div>
            <div id="menu_header">
                <ul>
                    <li><a href="/sobre">Sobre</a></li>
                    <li><a href="/receitas">Receitas</a></li>
                </ul>
            </div>
        </div>
    </header>

    <main class="container">
        
        <section id="receitas" class="page_receitas">

            <div class="receitas_cards">

                {% for item in items %}
                <div class="card" id="{{item.name}}" onclick="abrirReceita({{items.indexOf(item)}})" >
                    <a>
                        <div class="card_img">
                            <img src="./assets/{{item.name}}.png" alt="">
                        </div>
                        <div class="card_content">
                            <h3>{{item.title}}</h3>
                            <p>{{item.author}}</p>
                        </div>
                    </a>
                </div>
                {% endfor %}



            </div>

        </section>

    </main>

