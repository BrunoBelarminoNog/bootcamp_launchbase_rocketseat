{% extends "layout.njk" %}

{% block styles %}
<link rel="stylesheet" href="/styles/profile_users.css">
{% endblock styles %}


{% block header %}
{% include "../parts/header.njk" %}
{% endblock header %}

{% block content %}

    <section class="user-dashborad container form">
        <form method="POST" action="/admin/profile?_method=PUT">

            <div class="header">
                <h3>Bem vindo {{user.firstName}}</h3>
            </div>

            <div class="fields">
                {% include 'admin/users/fields.njk' %}
                <input type="hidden" name="id" value={{user.id}}>
            </div>

            <div class="buttons">
                    <button class="button edit" type="submit">Salvar</button>
            </div>
        </form>

    </section>

{% endblock content %}