{% extends "layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/styles/cards.css">
{% endblock styles %}


{% block header %}
{% include "../parts/header.njk" %}
{% endblock header %}

{% block content %}

<section id="admin_receitas">

    <div class="header">
        <h1>Gerenciar receitas</h1> 
        <a href="/admin/receitas/create" class="button">Nova Receita</a>
    </div>

    <div class="receitas_cards">

        {% for recipe in recipes %}
        <div class="card">
                <div class="card_img">
                    <img src="{{recipe.image}}" alt="">
                </div>
                <div class="card_content">
                    <h3>{{recipe.title}}</h3>
                    <p>{{recipe.chef_name}}</p>
                    <a href="/admin/receitas/{{recipe.id}}">Visualizar</a>
                </div>
        </div>
        {% endfor %}

    </div>
</section>

{% endblock content %}