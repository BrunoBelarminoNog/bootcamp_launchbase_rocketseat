<div class="receita_descricao">

            <div class="receita_descricao_titles">
                <h2>Nome</h2>
            </div>
            <div class="receita_input">
                <div>
                    <div>
                        <input type="text" name="name" value="{{chef.name}}" id="" >
                    </div>
                </div>
            </div>

            <div class="receita_descricao_titles">
                <h2>Avatar</h2>
            </div>
            <div class="receita_input">
                <div>
                    <div id="avatar-preview">


                        {% if file %}
                                <input type="text" name="fileChef" value="{{file.path}}">
                        {% endif %}
                    </div>

                    <div class="avatar-upload">
                        <input type="file" name="avatar" value="{{file}}" accept="image/*" id="avatar-input" placeholder="https://" onchange="PhotoChef.fileInput(event)">
                        <p>Enviar Avatar</p>
                    </div>
                </div>
            </div>
            
        </div>