<div class="item">
    <div>E-mail</div>
    <div class="input validate">
        <input type="email" name="email" id="" placeholder="Digite seu e-mail" onblur="Validate.apply(this, 'isEmail')" >
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input type="password" name="password" placeholder="Digite sua nova senha" >
    </div>
</div>

<div class="item">
    <div>Repetição Senha</div>
    <div class="input">
        <input type="password" name="passwordRepeat" placeholder="Repita a nova senha" >
    </div>
</div>

<input type="hidden" name="token" value="{{token}}">