{% extends "layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/styles/session.css">
{% endblock styles %}

{% block content %}
    <section class="login container form">
        <form method="POST" action="/forgot-password">

            <div class="header">
                <h3>Esqueceu sua senha?</h3>
            </div>

            <div class="fields">
                <div class="item">
                    <div>E-mail</div>
                    <div class="input validate">
                        <input type="email" name="email" id="" placeholder="Digite seu e-mail para recuperar sua senha" value="{{user.email}}" onblur="Validate.apply(this, 'isEmail')">
                    </div>
                </div>
            </div>

            <div class="footer">
    
                <div></div>
                <button class="button" type="submit">Recuperar</button>

            </div>
        </form>
    </section>
{% endblock content %}