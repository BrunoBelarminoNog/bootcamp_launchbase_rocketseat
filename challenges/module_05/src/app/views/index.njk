{% extends "layout.njk" %}

{% block content %}
   <div class="card table-container">
    <a href="/teachers/create">Novo</a>
    <table width="100%">
        <thead>
            <tr>
                <th></th>
                <th>Professor</th>
                <th>Acompanhamento</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            {% for teacher in teachers %}
            <tr>
                <td><span style="background-image: url({{teacher.avatar_url}})"></span></td>
                <td>{{teacher.name}}</td>
                <td>{{teacher.areas}}</td>
                <td><a href="/teachers/{{teacher.id}}">Ver</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock content %}
